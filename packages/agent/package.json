{
	"name": "@sparrowstack/agent",
	"version": "0.1.0",
	"description": "Agent module for SparrowStack",
	"private": true,
	"module": "index.ts",
	"type": "module",
	"author": {
		"name": "SparrowStack",
		"email": "sparrowstack@protonmail.com",
		"url": "https://sparrowstack.ai"
	},
	"license": "MIT",
	"scripts": {
		"format": "prettier --write \"src/**/*.{js,ts,json,md}\"",
		"format:check": "prettier --check \"src/**/*.{js,ts,json,md}\"",
		"lint": "eslint \"src/**/*.{js,ts}\"",
		"lint:fix": "eslint \"src/**/*.{js,ts}\" --fix",
		"build:js": "bun build src/index.ts --outdir dist --target bun",
		"build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
		"build": "bun build:js && bun build:types"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.19.0",
		"@types/bun": "latest",
		"@typescript-eslint/eslint-plugin": "8.23.0",
		"@typescript-eslint/parser": "8.23.0",
		"eslint": "9.19.0",
		"eslint-config-prettier": "^10.0.1",
		"globals": "^15.14.0",
		"prettier": "3.4.2",
		"typescript": "5.7.3"
	},
	"peerDependencies": {
		"typescript": "5.7.3"
	}
}
