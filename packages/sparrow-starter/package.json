{
	"name": "@sparrowstack/sparrow-starter",
	"version": "0.1.0",
	"description": "SparrowStack Starter Project",
	"private": true,
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"author": {
		"name": "SparrowStack",
		"email": "sparrowstack@protonmail.com",
		"url": "https://sparrowstack.ai"
	},
	"license": "MIT",
	"scripts": {
		"start:interactiveTerminal:openai": "bun run src/examples/interactiveTerminal/openai.ts",
		"start:interactiveTerminal:anthropic": "bun run src/examples/interactiveTerminal/anthropic.ts",
		"format": "bunx prettier --write \"src/**/*.{js,ts,json,md}\"",
		"format:check": "bunx prettier --check \"src/**/*.{js,ts,json,md}\"",
		"lint": "bunx eslint \"src/**/*.{js,ts}\"",
		"lint:fix": "bunx eslint \"src/**/*.{js,ts}\" --fix",
		"build:js": "bun build src/index.ts --outdir dist --target bun",
		"build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
		"build": "bun build:js && bun build:types"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	}
}
