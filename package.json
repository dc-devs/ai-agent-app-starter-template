{
	"name": "sparrowstack",
	"private": true,
	"description": "Monorepo for SparrowStack",
	"packageManager": "bun@1.2.2",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"start:openai": "bun scripts/openai.ts",
		"start:anthropic": "bun scripts/anthropic.ts",
		"lint:all": "bunx nx run-many --target=lint --all --parallel",
		"build:all": "bunx nx run-many --target=build --all --parallel"
	},
	"devDependencies": {
		"@eslint/compat": "1.2.6",
		"@eslint/eslintrc": "3.2.0",
		"@eslint/js": "9.20.0",
		"@nx/eslint": "20.4.2",
		"@types/bun": "latest",
		"@types/figlet": "1.7.0",
		"@typescript-eslint/eslint-plugin": "8.24.0",
		"@typescript-eslint/parser": "8.24.0",
		"eslint": "9.20.1",
		"eslint-config-prettier": "10.0.1",
		"globals": "15.14.0",
		"nx": "20.4.2",
		"prettier": "3.5.0",
		"typescript": "5.7.3"
	}
}
