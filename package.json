{
	"name": "sparrowstack",
	"private": true,
	"description": "Monorepo for SparrowStack",
	"packageManager": "bun@1.2.2",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"lint:all": "bun run nx run-many --target=lint --all --parallel",
		"build:all": "bun run nx run-many --target=build --all --parallel"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.6",
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.19.0",
		"@nx/eslint": "^20.4.1",
		"@types/bun": "latest",
		"@types/figlet": "^1.7.0",
		"@typescript-eslint/eslint-plugin": "6.21.0",
		"@typescript-eslint/parser": "6.21.0",
		"eslint": "^9.19.0",
		"eslint-config-prettier": "^10.0.1",
		"globals": "^15.14.0",
		"nx": "20.4.1",
		"prettier": "3.2.0",
		"typescript": "5.3.3"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.33.1",
		"@sparrowstack/agent": "workspace:*",
		"@sparrowstack/interactive-terminal": "workspace:*",
		"@sparrowstack/logger": "workspace:*",
		"@sparrowstack/system-prompt": "workspace:*",
		"@sparrowstack/system-prompts": "workspace:*",
		"@sparrowstack/tool": "workspace:*",
		"@sparrowstack/tools": "workspace:*",
		"axios": "^1.7.9",
		"chalk": "^5.4.1",
		"ignore": "^7.0.3",
		"openai": "^4.79.1",
		"ora": "^8.1.1",
		"wrap-ansi": "^9.0.0"
	}
}
