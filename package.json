{
	"name": "sparrowstack",
	"description": "Stater template for building your own AI agents",
	"type": "module",
	"module": "dist/index.js",
	"workspaces": [
		"packages/*"
	],
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"trustedDependencies": [
		"typescript"
	],
	"scripts": {
		"start:interactiveTerminal:openai": "bun run scripts/startInteractiveTerminalOpenAI.ts",
		"start:interactiveTerminal:anthropic": "bun run scripts/startInteractiveTerminalAnthropic.ts",
		"start": "bun run src/index.ts",
		"dev": "bun --watch run src/index.ts",
		"format": "prettier --write \"src/**/*.{js,ts,json,md}\"",
		"format:check": "prettier --check \"src/**/*.{js,ts,json,md}\"",
		"lint": "eslint \"src/**/*.{js,ts}\"",
		"lint:fix": "eslint \"src/**/*.{js,ts}\" --fix",
		"build:js": "bun build src/index.ts --outdir dist --target bun",
		"build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
		"build": "bun build:js && bun build:types"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/figlet": "^1.7.0",
		"@typescript-eslint/eslint-plugin": "6.21.0",
		"@typescript-eslint/parser": "6.21.0",
		"eslint": "8.56.0",
		"eslint-config-prettier": "9.1.0",
		"prettier": "3.2.0",
		"typescript": "5.3.3"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.33.1",
		"axios": "^1.7.9",
		"chalk": "^5.4.1",
		"ignore": "^7.0.3",
		"openai": "^4.79.1",
		"ora": "^8.1.1",
		"@sparrowstack/logger": "workspace:*",
		"@sparrowstack/tool": "workspace:*",
		"@sparrowstack/tools": "workspace:*",
		"@sparrowstack/interactive-terminal": "workspace:*",
		"wrap-ansi": "^9.0.0"
	}
}
