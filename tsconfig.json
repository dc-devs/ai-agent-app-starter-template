{
	"compilerOptions": {
		// Enable latest features
		"lib": ["ESNext", "DOM"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,

		// Bundler mode
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist",

		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,

		// Some stricter flags (disabled by default)
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false,

		// Paths
		"paths": {
			"@root/*": ["./*"],
			"@src/*": ["./src/*"],
			"@Agent": ["./src/Agent"],
			"@Agent/*": ["./src/Agent/*"],
			"@Logger": ["./src/Logger"],
			"@Logger/*": ["./src/Logger/*"],
			"@Tool": ["./src/Tool"],
			"@Tool/*": ["./src/Tool/*"],
			"@Tools": ["./src/Tools"],
			"@Tools/*": ["./src/Tools/*"],
			"@ChatMessage": ["./src/Agent/core/ChatMessage"],
			"@ChatMessage/*": ["./src/Agent/core/ChatMessage/*"],
			"@ChatMessageManager": ["./src/Agent/core/ChatMessageManager"],
			"@ChatMessageManager/*": ["./src/Agent/core/ChatMessageManager/*"],
			"@InteractionLogger": ["./src/Agent/core/InteractionLogger"],
			"@InteractionLogger/*": ["./src/Agent/core/InteractionLogger/*"],
			"@SystemPrompt": ["./src/SystemPrompt"],
			"@SystemPrompt/*": ["./src/SystemPrompt/*"],
			"@SystemPrompts": ["./src/SystemPrompts"],
			"@SystemPrompts/*": ["./src/SystemPrompts/*"],
			"@InteractiveTerminal": ["./src/InteractiveTerminal"],
			"@InteractiveTerminal/*": ["./src/InteractiveTerminal/*"],

			"@InstantiateAgent": [
				"./src/InteractiveTerminal/core/InstantiateAgent"
			],
			"@InstantiateAgent/*": [
				"./src/InteractiveTerminal/core/InstantiateAgent/*"
			],
			"@InteractiveSession": [
				"./src/InteractiveTerminal/core/InteractiveSession"
			],
			"@InteractiveSession/*": [
				"./src/InteractiveTerminal/core/InteractiveSession/*"
			],
			"@Validate": ["./src/InteractiveTerminal/core/Validate"],
			"@Validate/*": ["./src/InteractiveTerminal/core/Validate/*"]
		}
	}
}
