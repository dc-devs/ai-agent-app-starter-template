{
	"compilerOptions": {
		// Enable latest features
		"lib": ["ESNext", "DOM"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,

		// Bundler mode
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist",

		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,

		// Some stricter flags (disabled by default)
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false,

		// Paths
		"paths": {
			"@/*": ["./*"],
			"@src/*": ["./src/*"],
			"@sparrowstack": ["./src/sparrowstack"],
			"@sparrowstack/*": ["./src/sparrowstack/*"],
			"@agent": ["./src/agent"],
			"@agent/*": ["./src/agent/*"],
			"@logger": ["./src/logger"],
			"@logger/*": ["./src/logger/*"],
			"@tool": ["./src/tool"],
			"@tool/*": ["./src/tool/*"],
			"@tools": ["./src/tools"],
			"@tools/*": ["./src/tools/*"],
			"@system-prompt": ["./src/system-prompt"],
			"@system-prompt/*": ["./src/system-prompt/*"],
			"@system-prompts": ["./src/system-prompts"],
			"@system-prompts/*": ["./src/system-prompts/*"],
			"@interactive-terminal": ["./src/interactive-terminal"],
			"@interactive-terminal/*": ["./src/interactive-terminal/*"]
		}
	}
}
